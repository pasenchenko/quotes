<nav class="py-4 flex justify-between items-center">
    <a class="block" href="{{ route('index') }}">{{ config_get('app.name') }}</a>

    <div class="flex items-center gap-4">
    {% if auth_check() %}
        <div class="text-xs font-bold uppercase">{{ auth_user().email }}</div>

        {% if can('admin') %}
            <a href="{{ route('admin.index') }}" class="text-xs font-bold uppercase text-red-800">Admin</a>
        {% endif %}

        {% embed '@components/form/form.twig' with {'action': route('logout')} %}
            {% block body %}
                {{ include('@components/form/button/submit.twig', {'text': 'Log Out'}) }}
            {% endblock %}
        {% endembed %}
    {% else %}
        <a href="{{ route('register') }}" class="text-xs font-bold uppercase">Register</a>
        <a href="{{ route('login') }}" class="ml-6 text-xs font-bold uppercase">Log In</a>
    {% endif %}
    </div>
</nav>
