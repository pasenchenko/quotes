{% embed '@layout/default.twig' with {'title': 'Login'} %}
    {% block main %}
        {{ parent() }}
        {% embed '@form/form.twig' with {'action': route('login')} %}
            {% block body %}
                {{ include('@form/input/email.twig', {'name': 'email', 'label': 'Email:'}) }}
                {{ include('@form/input/password.twig', {'name': 'password', 'label': 'Password:'}) }}
                {{ include('@form/button/submit.twig', {'text': 'Log in'}) }}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}
