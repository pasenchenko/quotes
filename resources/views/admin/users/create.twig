{% embed '@layout/default.twig' with {title: trans('Create New User')} %}
    {% block main %}
        {{ parent() }}
        {% embed '@form/form.twig' with {'action': route('admin.users.store')} %}
            {% block body %}
                {{ include('@form/input/email.twig', {name: 'email', label: trans('Email')}) }}
                {{ include('@form/input/password.twig', {name: 'password', label: trans('Password')}) }}
                {{ include('@form/input/password.twig',
                    {name: 'password_confirmation', label: trans('Password confirmation')}) }}
                {{ include('@form/button/submit.twig', {text: trans('Create')}) }}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}
